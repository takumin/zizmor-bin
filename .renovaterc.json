{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:best-practices",
		"github>aquaproj/aqua-renovate-config#2.8.0",
		"github>aquaproj/aqua-renovate-config:file#2.8.0(.aqua/.*\\.ya?ml)",
		"github>aquaproj/aqua-renovate-config:file#2.8.0(.aqua/pkgs/.*\\.ya?ml)"
	],
	"timezone": "Asia/Tokyo",
	"automerge": true,
	"customManagers": [
		{
			"customType": "regex",
			"managerFilePatterns": ["/^version.json$/"],
			"matchStrings": ["\"version\": \"(?<currentValue>.*?)\"\n"],
			"datasourceTemplate": "github-releases",
			"depNameTemplate": "zizmorcore/zizmor"
		}
	]
}
